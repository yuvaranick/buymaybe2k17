@using SampleAuth1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="text-block-2">Welcome Back! </div>
<div id="sign_up_box">
    <div class="form-block w-form">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "wf-form-Email-Form", @name = "wf-form-Email-Form", @class = "form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.LabelFor(m => m.Email, new { @class = "field-label-2" })
                @Html.TextBoxFor(m => m.Email, new { @class = "text-field-2 w-input" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                @Html.LabelFor(m => m.Password, new { @class = "field-label-3" })
                @Html.PasswordFor(m => m.Password, new { @class = "text-field-3 w-input" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)

                <input type="submit" value="Sign In" class="submit-button w-button" />
            }
        </section>
        <div class="success-message w-form-done">
            <div class="text-block">WELCOME!</div>
        </div>
        <div class="error-message w-form-fail">
            <div>Oops! Something went wrong. Please try again.</div>
        </div>
    </div>
</div>
<div class="div-block-2 w-clearfix">
    <div class="text-block-3">Need an account?</div>
    @Html.ActionLink("Sign Up Now!", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "link" })
   
</div>
<div>
    <a href="mailto:help@buymaybe.com?subject=Reset%20My%20Password" class="link-block w-inline-block">
        <div class="text-block-4">Forgot Password</div>
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}