
@{
    ViewBag.Title = "Favourites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count == 0)
{<p> No Favourites!!!</p>}

<div class="div-block"></div>
<div class="section-2 w-clearfix">
    <h3 class="heading">Maybe List</h3>
    <a href="@Url.Action("sendEmail", "Wishlists")" class="share-button w-inline-block"><img src="/images/share-100b.png" width="25" class="share-icon"></a>
</div>

@foreach (var item in Model)
{
    <div class="favorite-item">
        @Html.ActionLink("REMOVE", "Delete", "WishLists", new { id = item.Id }, htmlAttributes: new { @class = "remove_favorite w-button" })
        <img src="@item.LargeImage" width="100" class="favorite_item_image">
        <div class="favorite_product_name">@item.Title</div><a href="@item.DetailPageURL" class="shop_favorite w-button">SHOP</a>
    </div>
}



